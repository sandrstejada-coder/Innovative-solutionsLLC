  <script>
    // Simple interactive bits: mobile menu toggle + contact handler
    (function(){
      const menuToggle = document.getElementById('menuToggle');
      const wrap = document.querySelector('.wrap');
      menuToggle.addEventListener('click', () => {
        const open = menuToggle.getAttribute('aria-expanded') === 'true';
        menuToggle.setAttribute('aria-expanded', String(!open));
        // simple mobile nav toggle by inserting/removing nav (keeps markup simple)
        const nav = document.querySelector('nav');
        if(nav.style.display === 'flex'){ nav.style.display = 'none'; }
        else { nav.style.display = 'flex'; nav.style.flexDirection = 'column'; nav.style.position = 'absolute'; nav.style.right = '16px'; nav.style.top = '72px'; nav.style.background = 'rgba(4,8,16,0.9)'; nav.style.padding = '12px'; nav.style.borderRadius = '10px'; }
      });

      // Year
      document.getElementById('year').textContent = new Date().getFullYear();

      // Contact: build mailto with encoded body
      window.handleContact = function(e){
        e.preventDefault();
        const name = document.getElementById('name').value.trim();
        const email = document.getElementById('email').value.trim();
        const message = document.getElementById('message').value.trim();
        if(!name || !email || !message){
          setStatus('Please fill out all fields', true);
          return false;
        }
        const subject = encodeURIComponent('Website contact from ' + name);
        let body = 'Name: ' + name + '\\n';
        body += 'Email: ' + email + '\\n\\n';
        body += message + '\\n\\n';
        const mailto = 'mailto:hello@example.com?subject=' + subject + '&body=' + encodeURIComponent(body);
        // open mail client
        window.location.href = mailto;
        setStatus('Opening your email client...', false);
        return false;
      }

      function setStatus(msg, isError){
        const s = document.getElementById('status');
        s.textContent = msg;
        s.style.color = isError ? '#ffb4b4' : 'var(--muted)';
      }
    })();

  </script>
